<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chajiu.mapper.UserMapper">
    <select id="findAll" resultType="user">
        select * from user
    </select>

    <select id="findOne" parameterType="user" resultType="user">
        select * from user
        <where>
            <choose>
                <when test="id!=null">
                    AND id=#{id}
                </when>
                <when test="name!=null">
                    AND name=#{name}
                </when>
                <when test="username!=null">
                    AND username=#{username}
                </when>
            </choose>
        </where>
    </select>

    <insert id="save" parameterType="user">
        insert into user(name,username,password,email) values(#{name},#{username},#{password},#{email})
    </insert>
    <update id="update" parameterType="user">
        update user set name=#{name}, password=#{password}, email=#{email} where id=#{id}
    </update>

    <delete id="delete" parameterType="int">
        delete from user where id=#{id}
    </delete>

    <select id="check" parameterType="user" resultType="int">
        select count(*) from user where username=#{username} AND password=#{password}
    </select>
</mapper>